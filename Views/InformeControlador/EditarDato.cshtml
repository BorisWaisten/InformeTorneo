@model Equipo

<h1>EditarDato</h1>

<h4>Equipo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarDato">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Nombre" required />
            <div class="form-group">
                <label asp-for="PartidosGanados" class="control-label"></label>
                <input asp-for="PartidosGanados" class="form-control" required min="0" />
                <span asp-validation-for="PartidosGanados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidosEmpatados" class="control-label"></label>
                <input asp-for="PartidosEmpatados" class="form-control" required min="0" />
                <span asp-validation-for="PartidosEmpatados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartidosPerdidos" class="control-label"></label>
                <input asp-for="PartidosPerdidos" class="form-control" required min="0" />
                <span asp-validation-for="PartidosPerdidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GolesAFavor" class="control-label"></label>
                <input asp-for="GolesAFavor" class="form-control" required min="0" />
                <span asp-validation-for="GolesAFavor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GolesEnContra" class="control-label"></label>
                <input asp-for="GolesEnContra" class="form-control" required min="0" />
                <span asp-validation-for="GolesEnContra" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <button asp-action="EditarDato" type="submit" class="btn btn-primary btn-block w-100">Modificar</button>
            </div>
        </form>
    </div>
</div>
